<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context=".WithdrawBottomSheetFragment"
>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <Button
                android:text="@string/withdraw_from_float_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_withdraw_from_float"
                android:background="@drawable/rounded_button"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="16dp"/>
        <Button
                android:text="@string/withdraw_from_interest_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_withdraw_from_interest"
                android:background="@drawable/rounded_button"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/btn_withdraw_from_float"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>